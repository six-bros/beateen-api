{
  "env": {
    "es6": true,
    "mocha": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "no-console": [
      "error",
      {
        "allow": ["info", "error", "warn"]
      }
    ]
  }
}
